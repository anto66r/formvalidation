{
    "extends": ["airbnb", "prettier", "prettier/react"],
    "plugins": ["prettier"],
    "rules": {
        "semi": "error",
        "jsx-a11y/label-has-for": 0,
        "indent": ["error", 2, { "MemberExpression": 1 }],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "curly": ["error", "all"],
        "quotes": ["error", "single"],
        "react/prop-types": 0,
        "no-underscore-dangle": 0,
        "no-param-reassign": 0,
        "no-undef": "off",
        "import/imports-first": ["error", "absolute-first"],
        "import/newline-after-import": "error"
    },
    "globals": {
        "fetch": true,
        "window": true,
        "document": true,
        "localStorage": true,
        "FormData": true,
        "FileReader": true,
        "Blob": true,
        "navigator": true
    },
    "parser": "babel-eslint"
}
